{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaFeatures": {
        "jsx": true,
        "modules": true
    }
  },
  "rules": {
    "semi": [2, "never"],
    "max-len": [2, 120],
    "prefer-arrow-callback": 0,
    "quotes": ["error", "single"],
    "arrow-parens": [2, "always"],
    "no-plusplus": ["error", { "allowForLoopAfterthoughts": true }],
    "no-mixed-operators": [
      "error",
      { "groups": [["&", "|", "^", "~", "<<", ">>", ">>>"], ["&&", "||"]] }
    ]
  }
}
